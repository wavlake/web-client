{
  "name": "@wavlake/web-client",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Alternative Wavlake web client - Nostr-native music streaming",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "npm run test -ws --if-present",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run packages/*/test/",
    "test:e2e": "vitest run --config tests/e2e/vitest.config.ts",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:e2e:watch": "vitest --config tests/e2e/vitest.config.ts",
    "snapshot": "npx tsx tests/e2e/snapshots/run-snapshot.ts",
    "snapshot:capture": "npx tsx tests/e2e/snapshots/run-snapshot.ts capture",
    "snapshot:list": "npx tsx tests/e2e/snapshots/run-snapshot.ts list",
    "snapshot:compare": "npx tsx tests/e2e/snapshots/run-snapshot.ts compare",
    "snapshot:set-golden": "npx tsx tests/e2e/snapshots/run-snapshot.ts set-golden",
    "snapshot:export": "npx tsx tests/e2e/snapshots/run-snapshot.ts export-csv",
    "pool:status": "npx tsx scripts/proof-pool-status.ts",
    "pool:refill": "npx tsx scripts/proof-pool-status.ts --refill",
    "pool:check": "npx tsx scripts/proof-pool-status.ts --ci"
  },
  "dependencies": {
    "@cashu/cashu-ts": "^3.3.0",
    "@noble/curves": "^1.8.1",
    "@noble/hashes": "^1.7.1",
    "@noble/secp256k1": "^2.2.3",
    "@nostr-dev-kit/ndk": "2.10.0",
    "@scure/base": "^1.2.4",
    "@tanstack/react-query": "^5.64.2",
    "@wavlake/nostr-wallet": "*",
    "@wavlake/wallet": "*",
    "qrcode.react": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.18.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
